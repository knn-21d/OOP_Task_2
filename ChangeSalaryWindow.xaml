<Window x:Name="ChangeSalary" x:Class="WpfApp2.ChangeSalaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Change salary" Height="163" Width="200">
    <Border x:Name="changeGrid">
        <Viewbox Stretch="Fill">
            <Viewbox Height="147.04" Stretch="Fill" Width="200">
                <Grid Height="147.04" Width="200">
                    <Label x:Name="label" Content="Enter %:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,41,0,0"/>
                    <TextBox x:Name="rateBox" TextWrapping="Wrap" Width="180" Height="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,72,0,0"/>
                    <Button x:Name="confirmButton" Content="Confirm" Width="65" Click="Confirm" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,109,125,0"/>
                    <Button x:Name="cancelButton" Content="Cancel" Click="Cancel" Width="65" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="125,109,0,0"/>

                </Grid>
            </Viewbox>
        </Viewbox>
    </Border>
</Window>
